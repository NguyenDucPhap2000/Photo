<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterPhoto</filter-name>
        <filter-class>Filter.FilterPhoto</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterPhoto</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>Controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HeaderControl</servlet-name>
        <servlet-class>Controller.HeaderControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactControl</servlet-name>
        <servlet-class>Controller.ContactControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GalleryControl</servlet-name>
        <servlet-class>Controller.GalleryControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/HomeControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HeaderControl</servlet-name>
        <url-pattern>/HeaderControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactControl</servlet-name>
        <url-pattern>/ContactControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GalleryControl</servlet-name>
        <url-pattern>/GalleryControl</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
